<form bindsubmit="onSubmit" report-submit>
    <view class="box">
        <view class="box-header">Recharge amount</view>
        <view class="box-content">
            <view class="recharge-icon">$</view>
            <input class="recharge-input" name="money" type="digit" bindinput="onMoneyInput" auto-focus />
        </view>
        <view class="box-footer">Current balance:{{recharge}}</view>
    </view>
    <view class="btn-row">
        <button type="primary" form-type="submit">Recharge</button>
    </view>
</form>